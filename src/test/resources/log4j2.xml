<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<Appenders>
		<Console name="console" target="SYSTEN.OUT">
			<PatternLayout
				pattern="%d{YYYY-MM-DD HH:mm:ss}[%t]%level %logger::%M::%L %msg %n"></PatternLayout>

		</Console>
		<File name="FileLogger" fileName="Logs/automation.log" append="false">
			<PatternLayout
				pattern="%d{YYYY-MM-DD HH:mm:ss}[%t]%level %logger %msg %n">
			</PatternLayout>
		</File>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="console"></AppenderRef>
			<AppenderRef ref="FileLogger"></AppenderRef>
		</Root>
	</Loggers>

</configuration>